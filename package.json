{
	"name": "bebar-vscode",
	"displayName": "bebar",
	"publisher": "oYo-fr",
	"description": "",
	"version": "0.0.13",
	"repository": {
		"type": "git",
		"url": "https://github.com/oYo-fr/bebar-vscode"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:bebarExplorer"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "bebar.open",
				"title": "Open",
				"icon": {
					"light": "resources/light/folder.svg",
					"dark": "resources/dark/folder.svg"
				}
			},
			{
				"command": "bebar.run",
				"title": "Run!",
				"icon": {
					"light": "resources/light/play.svg",
					"dark": "resources/dark/play.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "bebar-explorer",
					"title": "Bebar Explorer",
					"icon": "resources/dark/bebar.svg"
				}
			]
		},
		"views": {
			"bebar-explorer": [
				{
					"id": "bebarExplorer",
					"name": "Bebar Explorer",
					"contextualTitle": "Bebar Explorer",
					"visibility": "visible"
				},
				{
					"id": "bebarExplorer-outputs",
					"name": "Outputs",
					"contextualTitle": "Outputs",
					"visibility": "visible",
					"when": "velcomeView:fileOpened"
				},
				{
					"id": "bebarExplorer-templates",
					"name": "Templates",
					"contextualTitle": "Templates",
					"visibility": "visible",
					"when": "velcomeView:fileOpened"
				},
				{
					"id": "bebarExplorer-data",
					"name": " Data",
					"contextualTitle": "Data",
					"visibility": "visible",
					"when": "velcomeView:fileOpened"
				},
				{
					"id": "bebarExplorer-partials",
					"name": "Partials",
					"contextualTitle": "Partials",
					"when": "velcomeView:fileOpened"
				},
				{
					"id": "bebarExplorer-helpers",
					"name": "Helpers",
					"contextualTitle": "Helpers",
					"when": "velcomeView:fileOpened"
				},
				{
					"id": "bebarExplorer-next",
					"name": "Next bebars",
					"contextualTitle": "Next bebars",
					"when": "velcomeView:fileOpened"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "bebarExplorer",
				"contents": "[Open a Bebar file](command:bebar.open)\nWant to know the cool stuff you can do with Bebar? [Check-out the documentation ðŸ’¡](https://www.npmjs.com/package/bebar/).",
				"when": "!velcomeView:fileOpened"
			},
			{
				"view": "bebarExplorer",
				"contents": "[Run ðŸ’¾](command:bebar.run)\nWant to know the cool stuff you can do with Bebar? [Check-out the documentation ðŸ’¡](https://www.npmjs.com/package/bebar/).",
				"when": "velcomeView:fileOpened"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "bebar.open",
					"when": "view == bebarExplorer",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"format": "prettier --write ./src/**/*.ts",
		"upgrade": "yarn upgrade",
		"upgrade Bebar": "yarn upgrade bebar",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"eslint-plugin-prettier": "^3.0.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.2",
		"vsce": "^1.83.0",
		"vscode-test": "^1.4.1",
		"webpack": "^5.13.0",
		"webpack-cli": "^4.3.1"
	},
	"dependencies": {
		"bebar": "^0.1.55",
		"handlebars": "^4.7.6",
		"lodash": "^4.17.20",
		"lodash-es": "^4.17.20"
	}
}
